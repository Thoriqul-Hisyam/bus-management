generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Bus {
id        Int       @id @default(autoincrement())
name      String
plateNo   String    @unique
type      BusType
capacity  Int
createdAt DateTime  @default(now())
updatedAt DateTime  @default(now())

}

enum BusType {
EKONOMI
BISNIS
VIP
EKSEKUTIF
SUPER_EKSEKUTIF
}


